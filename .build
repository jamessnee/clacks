#! /bin/bash

VERBOSE=0
CLEAN=0
INSTALL=0
RUN=0

do_clean ()
{
  cd ../
  rm -rf build
  mkdir build
  cd build
  ln -s ../.build .build
  ln -s ../.run .run
  ln -s ../.install .install
}

do_install ()
{
  ./.install
}

do_run ()
{
  ./.run
}

print_help ()
{
  echo "Need help eh...?"
  echo "-v -- Verbose building"
  echo "-c -- Clean before building"
  echo "-i -- Install the Clacks library (/usr/local/{lib,include})"
  echo "-r -- Run the Clacks daemon and Identifier Service"
}

echo "*********************"
echo "BUILDING CLACKS!"
echo "*********************"

while getopts "vchir" opt; do
  case "$opt" in
    v)
     VERBOSE=1
     ;;
    c)
     CLEAN=1
     ;;
    h)
     print_help
     exit
     ;;
    i)
     INSTALL=1
     ;;
    r)
     RUN=1
     ;;
  esac
done

if [ $CLEAN -eq 1 ]
  then
    do_clean
fi

export CC=/usr/bin/clang
export CXX=/usr/bin/clang++

echo "Running CMake..."
cmake -D_CMAKE_TOOLCHAIN_PREFIX=llvm- -G "Unix Makefiles" ..

echo "Running make..."
if [ $VERBOSE -eq 1 ]
  then
    make VERBOSE=1
else
    make
fi

echo "Installing"
if [ $INSTALL -eq 1 ]
  then
    do_install
fi

echo "Starting Clacks Services"
if [ $RUN -eq 1 ]
  then
    do_run
fi
